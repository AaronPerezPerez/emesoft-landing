---
/**
 * FormField - Componente de campo de formulario reutilizable
 * Soporta inputs de texto, email, tel√©fono, textarea y select
 */
interface SelectOption {
  value: string;
  label: string;
}

interface Props {
  type: 'text' | 'email' | 'tel' | 'textarea' | 'select';
  name: string;
  label: string;
  placeholder?: string;
  required?: boolean;
  options?: SelectOption[];
  rows?: number;
  class?: string;
}

const {
  type,
  name,
  label,
  placeholder = '',
  required = false,
  options = [],
  rows = 4,
  class: className = '',
} = Astro.props;

const inputClasses = 'w-full px-4 py-3 rounded-lg border border-gray-200 focus:border-primary focus:ring-2 focus:ring-primary/20 transition-all outline-none';
const labelClasses = 'block text-sm font-medium text-gray-700 mb-2';
---

<div class={className}>
  <label for={name} class={labelClasses}>
    {label}{required && ' *'}
  </label>

  {type === 'textarea' ? (
    <textarea
      id={name}
      name={name}
      required={required}
      rows={rows}
      class={`${inputClasses} resize-none`}
      placeholder={placeholder}
    />
  ) : type === 'select' ? (
    <select
      id={name}
      name={name}
      required={required}
      class={`${inputClasses} bg-white`}
    >
      {options.map(option => (
        <option value={option.value}>{option.label}</option>
      ))}
    </select>
  ) : (
    <input
      type={type}
      id={name}
      name={name}
      required={required}
      class={inputClasses}
      placeholder={placeholder}
    />
  )}
</div>
