---
import { clients } from '../data/clients';
---

<section class="py-12 lg:py-16 bg-white overflow-hidden">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mb-8 text-center">
    <p class="text-gray-500 text-sm font-medium tracking-wide uppercase">
      Empresas que conf√≠an en nuestro software
    </p>
  </div>

  <div class="relative">
    <!-- Fade edges -->
    <div class="absolute left-0 top-0 bottom-0 w-16 sm:w-24 bg-gradient-to-r from-white to-transparent z-10 pointer-events-none"></div>
    <div class="absolute right-0 top-0 bottom-0 w-16 sm:w-24 bg-gradient-to-l from-white to-transparent z-10 pointer-events-none"></div>

    <!-- Marquee container -->
    <div class="flex animate-marquee gap-12 lg:gap-16 items-center">
      {[...clients, ...clients].map(client => (
        <img
          src={client.logo}
          alt={client.name}
          class="h-8 lg:h-10 w-auto grayscale opacity-50 hover:grayscale-0 hover:opacity-100 transition-all duration-300 flex-shrink-0"
          loading="lazy"
        />
      ))}
    </div>
  </div>
</section>

<style>
  @keyframes marquee {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .animate-marquee {
    animation: marquee 25s linear infinite;
    width: max-content;
  }

  .animate-marquee:hover {
    animation-play-state: paused;
  }
</style>
