---
import { company } from '../data/company';
import { products } from '../data/products';
import { services } from '../data/services';

const currentYear = new Date().getFullYear();
const featuredProducts = products.filter(p => p.id !== 'otros');
---

<!-- Wave divider -->
<div class="relative bg-gray-50">
  <svg class="absolute bottom-0 left-0 right-0 w-full" viewBox="0 0 1440 80" fill="none" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="none">
    <path d="M0 80V30C240 70 480 0 720 30C960 60 1200 10 1440 40V80H0Z" fill="#111827"/>
  </svg>
</div>

<!-- Final CTA Section -->
<section class="bg-gray-900 pt-16 pb-8 relative overflow-hidden">
  <div class="absolute inset-0 emesoft-pattern-light"></div>
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative">
    <h2 class="font-display text-2xl sm:text-3xl lg:text-4xl font-bold text-white mb-4">
      ¿Listo para transformar su negocio?
    </h2>
    <p class="text-gray-400 text-lg mb-8 max-w-2xl mx-auto">
      Únase a más de 100 empresas que ya confían en EMESOFT para su gestión empresarial.
    </p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <a
        href="#contacto"
        class="group px-8 py-4 bg-primary text-white font-bold rounded-xl hover:bg-primary-light transition-all duration-300 hover:shadow-[var(--shadow-brand-lg)] flex items-center justify-center gap-2"
      >
        Solicitar demostración
        <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
      <a
        href="tel:922123456"
        class="px-8 py-4 border-2 border-white/20 text-white font-bold rounded-xl hover:border-white/40 hover:bg-white/5 transition-all duration-300 flex items-center justify-center gap-2"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
        </svg>
        Llamar ahora
      </a>
    </div>
  </div>
</section>

<footer class="bg-gray-900 text-white relative overflow-hidden">
  <div class="absolute inset-0 emesoft-pattern-light opacity-[0.02]"></div>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
    <!-- Main Footer -->
    <div class="py-12 lg:py-16 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12">
      <!-- Brand Column -->
      <div class="sm:col-span-2 lg:col-span-1">
        <a href="/" class="inline-block mb-6">
          <img
            src="/emesoft_logo.png"
            alt={company.name}
            class="h-12 w-auto brightness-0 invert"
          />
        </a>
        <p class="text-gray-400 text-sm leading-relaxed mb-6">
          {company.tagline}
        </p>
        <div class="flex items-center gap-4">
          {company.social.linkedin && (
            <a
              href={company.social.linkedin}
              target="_blank"
              rel="noopener noreferrer"
              class="w-10 h-10 rounded-lg bg-white/10 hover:bg-primary flex items-center justify-center transition-colors"
              aria-label="LinkedIn"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
              </svg>
            </a>
          )}
        </div>
      </div>

      <!-- Products Column -->
      <div>
        <h4 class="font-display font-bold text-white mb-4">Productos</h4>
        <ul class="space-y-3">
          {featuredProducts.map(product => (
            <li>
              <a
                href={`#${product.id}`}
                class="text-gray-400 hover:text-white text-sm transition-colors"
              >
                {product.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Services Column -->
      <div>
        <h4 class="font-display font-bold text-white mb-4">Servicios</h4>
        <ul class="space-y-3">
          {services.slice(0, 4).map(service => (
            <li>
              <a
                href="#servicios"
                class="text-gray-400 hover:text-white text-sm transition-colors"
              >
                {service.title}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact Column -->
      <div>
        <h4 class="font-display font-bold text-white mb-4">Contacto</h4>
        <ul class="space-y-3 text-sm">
          {company.contact.phones.map(phone => (
            <li>
              <a
                href={`tel:${phone.replace(/\s/g, '')}`}
                class="text-gray-400 hover:text-white transition-colors flex items-center gap-2"
              >
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                {phone}
              </a>
            </li>
          ))}
          <li>
            <a
              href={`mailto:${company.contact.emails.comercial}`}
              class="text-gray-400 hover:text-white transition-colors flex items-center gap-2"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              {company.contact.emails.comercial}
            </a>
          </li>
          <li class="text-gray-400 flex items-start gap-2">
            <svg class="w-4 h-4 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            </svg>
            <span>{company.location.city}</span>
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="py-6 border-t border-white/10">
      <div class="flex flex-col sm:flex-row justify-between items-center gap-4">
        <p class="text-gray-400 text-sm">
          © {currentYear} {company.name} {company.legalName}. Todos los derechos reservados.
        </p>
        <div class="flex items-center gap-6 text-sm">
          <a href="#" class="text-gray-400 hover:text-white transition-colors">Aviso legal</a>
          <a href="#" class="text-gray-400 hover:text-white transition-colors">Privacidad</a>
          <a href="#" class="text-gray-400 hover:text-white transition-colors">Cookies</a>
        </div>
      </div>
    </div>
  </div>
</footer>
