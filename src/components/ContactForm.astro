---
import { company } from '../data/company';
---

<section id="contacto" class="py-20 lg:py-32 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center max-w-3xl mx-auto mb-16" data-animate>
      <h2 class="font-display text-2xl sm:text-3xl lg:text-4xl font-bold text-gray-900 mb-6">
        Hablemos de
        <span class="text-primary"> su proyecto</span>
      </h2>
      <p class="text-lg text-gray-600">
        Cuéntenos sus necesidades y le ayudaremos a encontrar la mejor solución.
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-5 gap-8 lg:gap-12">
      <!-- Contact Form -->
      <div class="lg:col-span-3" data-animate>
        <form class="bg-white rounded-2xl p-8 shadow-sm border border-gray-100" id="contact-form">
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 mb-6">
            <!-- Name -->
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
                Nombre completo *
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-3 rounded-lg border border-gray-200 focus:border-primary focus:ring-2 focus:ring-primary/20 transition-all outline-none"
                placeholder="Su nombre"
              />
            </div>

            <!-- Company -->
            <div>
              <label for="company" class="block text-sm font-medium text-gray-700 mb-2">
                Empresa
              </label>
              <input
                type="text"
                id="company"
                name="company"
                class="w-full px-4 py-3 rounded-lg border border-gray-200 focus:border-primary focus:ring-2 focus:ring-primary/20 transition-all outline-none"
                placeholder="Nombre de su empresa"
              />
            </div>

            <!-- Email -->
            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                Email *
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 rounded-lg border border-gray-200 focus:border-primary focus:ring-2 focus:ring-primary/20 transition-all outline-none"
                placeholder="su@email.com"
              />
            </div>

            <!-- Phone -->
            <div>
              <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">
                Teléfono
              </label>
              <input
                type="tel"
                id="phone"
                name="phone"
                class="w-full px-4 py-3 rounded-lg border border-gray-200 focus:border-primary focus:ring-2 focus:ring-primary/20 transition-all outline-none"
                placeholder="922 000 000"
              />
            </div>
          </div>

          <!-- Product Interest -->
          <div class="mb-6">
            <label for="product" class="block text-sm font-medium text-gray-700 mb-2">
              ¿Qué producto le interesa?
            </label>
            <select
              id="product"
              name="product"
              class="w-full px-4 py-3 rounded-lg border border-gray-200 focus:border-primary focus:ring-2 focus:ring-primary/20 transition-all outline-none bg-white"
            >
              <option value="">Seleccione una opción</option>
              <option value="emesport">EMESPORT - Calzado, Textil y Deporte</option>
              <option value="emeservice">EMESERVICE - Talleres y Distribución</option>
              <option value="emeclinic">EMECLINIC - Clínicas y Consultas</option>
              <option value="custom">Desarrollo a medida</option>
              <option value="other">Otro / No estoy seguro</option>
            </select>
          </div>

          <!-- Message -->
          <div class="mb-6">
            <label for="message" class="block text-sm font-medium text-gray-700 mb-2">
              Mensaje *
            </label>
            <textarea
              id="message"
              name="message"
              required
              rows="4"
              class="w-full px-4 py-3 rounded-lg border border-gray-200 focus:border-primary focus:ring-2 focus:ring-primary/20 transition-all outline-none resize-none"
              placeholder="Cuéntenos sobre su proyecto o necesidades..."
            ></textarea>
          </div>

          <!-- Submit -->
          <button
            type="submit"
            id="submit-btn"
            class="w-full sm:w-auto px-8 py-4 bg-primary text-white font-semibold rounded-lg hover:bg-primary-dark transition-all duration-200 shadow-sm hover:shadow-[var(--shadow-brand)] flex items-center justify-center gap-2 disabled:opacity-60 disabled:cursor-not-allowed"
          >
            <span id="btn-text">Enviar mensaje</span>
            <svg id="btn-arrow" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
            </svg>
            <svg id="btn-spinner" class="w-5 h-5 animate-spin hidden" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4z"></path>
            </svg>
            <svg id="btn-check" class="w-5 h-5 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
          </button>

          <!-- Success message -->
          <div id="success-message" class="hidden mt-4 p-4 bg-green-50 border border-green-200 rounded-lg">
            <div class="flex items-center gap-3 text-green-700">
              <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <p class="font-medium">¡Mensaje enviado! Nos pondremos en contacto pronto.</p>
            </div>
          </div>

          <!-- Error message -->
          <div id="error-message" class="hidden mt-4 p-4 bg-red-50 border border-red-200 rounded-lg">
            <div class="flex items-center gap-3 text-red-700">
              <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <p class="font-medium">Error al enviar. Por favor, inténtelo de nuevo.</p>
            </div>
          </div>
        </form>
      </div>

      <!-- Contact Info -->
      <div class="lg:col-span-2" data-animate style="animation-delay: 100ms">
        <div class="bg-white rounded-2xl p-8 shadow-sm border border-gray-100 h-full">
          <h3 class="font-display text-xl font-bold text-gray-900 mb-6">
            Contacto directo
          </h3>

          <div class="space-y-6">
            <!-- Phones -->
            <div>
              <p class="text-sm font-medium text-gray-500 mb-2">Teléfonos</p>
              <div class="space-y-2">
                {company.contact.phones.map(phone => (
                  <a
                    href={`tel:${phone.replace(/\s/g, '')}`}
                    class="flex items-center gap-3 text-gray-900 hover:text-primary transition-colors group"
                  >
                    <span class="w-10 h-10 rounded-lg bg-primary/10 flex items-center justify-center group-hover:bg-primary group-hover:text-white transition-all">
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                      </svg>
                    </span>
                    <span class="font-medium">{phone}</span>
                  </a>
                ))}
              </div>
            </div>

            <!-- Email -->
            <div>
              <p class="text-sm font-medium text-gray-500 mb-2">Email comercial</p>
              <a
                href={`mailto:${company.contact.emails.comercial}`}
                class="flex items-center gap-3 text-gray-900 hover:text-primary transition-colors group"
              >
                <span class="w-10 h-10 rounded-lg bg-primary/10 flex items-center justify-center group-hover:bg-primary group-hover:text-white transition-all">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </span>
                <span class="font-medium">{company.contact.emails.comercial}</span>
              </a>
            </div>

            <!-- Address -->
            <div>
              <p class="text-sm font-medium text-gray-500 mb-2">Dirección</p>
              <div class="flex items-start gap-3">
                <span class="w-10 h-10 rounded-lg bg-primary/10 flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                </span>
                <div>
                  <p class="font-medium text-gray-900">{company.location.address}</p>
                  <p class="text-gray-600">{company.location.postalCode} {company.location.city}</p>
                  <p class="text-gray-500 text-sm">{company.location.region}</p>
                </div>
              </div>
            </div>

            <!-- Schedule -->
            <div class="pt-4 border-t border-gray-100">
              <p class="text-sm font-medium text-gray-500 mb-1">Horario de atención</p>
              <p class="text-gray-900 font-medium">{company.contact.schedule}</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  [data-animate] {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
  }
  [data-animate].animate-in {
    opacity: 1;
    transform: translateY(0);
  }
  @keyframes shake {
    0%, 100% { transform: translateX(0); }
    10%, 30%, 50%, 70%, 90% { transform: translateX(-4px); }
    20%, 40%, 60%, 80% { transform: translateX(4px); }
  }
  .shake {
    animation: shake 0.5s ease-in-out;
  }
  .input-error {
    border-color: #ef4444 !important;
    box-shadow: 0 0 0 3px rgb(239 68 68 / 0.1);
  }
</style>

<script>
  const form = document.getElementById('contact-form') as HTMLFormElement;
  const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
  const btnText = document.getElementById('btn-text');
  const btnArrow = document.getElementById('btn-arrow');
  const btnSpinner = document.getElementById('btn-spinner');
  const btnCheck = document.getElementById('btn-check');
  const successMessage = document.getElementById('success-message');
  const errorMessage = document.getElementById('error-message');

  const setLoading = (loading: boolean) => {
    submitBtn.disabled = loading;
    btnText!.textContent = loading ? 'Enviando...' : 'Enviar mensaje';
    btnArrow?.classList.toggle('hidden', loading);
    btnSpinner?.classList.toggle('hidden', !loading);
  };

  const setSuccess = () => {
    btnText!.textContent = '¡Enviado!';
    btnArrow?.classList.add('hidden');
    btnSpinner?.classList.add('hidden');
    btnCheck?.classList.remove('hidden');
    submitBtn.classList.remove('bg-primary', 'hover:bg-primary-dark');
    submitBtn.classList.add('bg-green-600');
    successMessage?.classList.remove('hidden');
    errorMessage?.classList.add('hidden');
  };

  const setError = () => {
    setLoading(false);
    form.classList.add('shake');
    errorMessage?.classList.remove('hidden');
    successMessage?.classList.add('hidden');
    setTimeout(() => form.classList.remove('shake'), 500);
  };

  const resetForm = () => {
    btnText!.textContent = 'Enviar mensaje';
    btnArrow?.classList.remove('hidden');
    btnCheck?.classList.add('hidden');
    submitBtn.classList.add('bg-primary', 'hover:bg-primary-dark');
    submitBtn.classList.remove('bg-green-600');
    submitBtn.disabled = false;
  };

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    // Clear previous error states
    form.querySelectorAll('.input-error').forEach(el => el.classList.remove('input-error'));

    // Validate required fields
    const requiredFields = form.querySelectorAll('[required]') as NodeListOf<HTMLInputElement>;
    let hasError = false;
    requiredFields.forEach(field => {
      if (!field.value.trim()) {
        field.classList.add('input-error');
        hasError = true;
      }
    });

    if (hasError) {
      setError();
      return;
    }

    setLoading(true);

    // Simulate form submission (replace with actual API call)
    try {
      await new Promise(resolve => setTimeout(resolve, 1500));
      setSuccess();
      form.reset();
      setTimeout(resetForm, 3000);
    } catch {
      setError();
    }
  });

  // Remove error state on input
  form?.querySelectorAll('input, textarea').forEach(field => {
    field.addEventListener('input', () => {
      field.classList.remove('input-error');
    });
  });
</script>
